{
  "name": "schemas-lib",
  "version": "3.0.0-next.1",
  "author": "Simple Organization",
  "scripts": {
    "build": "tsc && rollup -c && bun build src/index.ts --outfile=dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepack": "pnpm build",
    "test": "mocha tests/**/*.spec.ts -r esbuild-register -extension ts --file tests/setup-tests.ts"
  },
  "main": "dist/index.js",
  "devDependencies": {
    "@types/bun": "^1.2.11",
    "prettier": "^3.5.3",
    "rollup": "^4.40.1",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.8.3"
  },
  "files": [
    "dist/index.d.ts",
    "dist/index.js"
  ],
  "bugs": "https://github.com/Simple-Organization/schemas-lib/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Simple-Organization/schemas-lib.git"
  },
  "type": "module",
  "types": "dist/index.d.ts"
}
